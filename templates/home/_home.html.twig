{% import 'macro/_get_trick_card_picture.html.twig' as macro %}
<div class="col-12 col-lg-3 my-3 text-center">
    <div class="card">
        <a href="{{ path('app_trick',{slug:trick.slug}) }}"><img src="{{ asset('images/picture/' ~ macro.getCardPicture(trick)| trim) }}" class="card-img-top" alt="{% trans with {'%name%': trick.name} %}snow_trick.home.alt.image_trick{% endtrans %}"></a>
        <div class="d-flex card-body justify-content-around align-content-center">
            <a href="{{ path('app_trick',{slug:trick.slug}) }}">
                <div>
                    <h5 class="card-title">{{ trick.name }}</h5>
                </div>
            </a>
            <div>
                <img src="{{ asset('images/pencil.png') }}" alt="">
            </div>
            <div>
                <img src="{{ asset('images/trash.png') }}" alt="">
            </div>
        </div>
    </div>
</div>

