{% extends 'base.html.twig' %}

{% block title %}{% trans %}snow_trick.title.home{% endtrans %}{% endblock %}


{% block body %}
    <div class="container-fluid arrow-container mb-5" {{ stimulus_controller('add-trick-homepage', {url: path('home'), page: page, pageMax: page_max }) }}>
        <div class="row m-5" id="tricks-list" data-add-trick-homepage-target="result">
            {{ include('home/_home.html.twig') }}
        </div>
        <div id="tricks-loader">
            {{ include('home/_loader.html.twig') }}

        </div>
        {% if arrow_page_up_on <= page * trick_per_page %}
            {% include 'component/_arrow_page_up.html.twig' %}
        {% endif %}
    </div>
    {% include 'component/_modal.html.twig' %}
{% endblock %}
