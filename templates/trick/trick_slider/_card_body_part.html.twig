<div class="card-body text-end">

    {% if picture is defined %}
        {% if picture.isMain %}
            <a href="{{ path('app_manage_main_picture',{'slug': trick.slug, 'uuid': picture.uuid}) }}" class="card-link">
                <img
                        src="{{ asset(icons_directory ~ 'heart-red.png') }}"
                        alt="{% trans %}snow_trick.icon_alt.pencil{% endtrans %}"
                >
            </a>
        {% else %}
            <a href="{{ path('app_manage_main_picture',{'slug': trick.slug, 'uuid': picture.uuid}) }}" class="card-link">
                <img
                        src="{{ asset(icons_directory ~ 'heart-empty.png') }}"
                        alt="{% trans %}snow_trick.icon_alt.pencil{% endtrans %}"
                >
            </a>
        {% endif %}
        <a href="{{ path('app_picture_delete', {'slug': trick.slug,'uuid': picture.uuid}) }}" class="card-link"><img
                    src="{{ asset(icons_directory ~ 'trash.png') }}"
                    alt="{% trans %}snow_trick.icon_alt.trash{% endtrans %}"></a>
    {% endif %}
    {% if video is defined %}
        <a href="{{ path('app_video_delete', {'slug': trick.slug,'uuid': video.uuid}) }}" class="card-link"><img
                    src="{{ asset(icons_directory ~ 'trash.png') }}"
                    alt="{% trans %}snow_trick.icon_alt.trash{% endtrans %}"></a>
    {% endif %}
</div>